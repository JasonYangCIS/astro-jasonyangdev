---
import logo from '../assets/logo.png';
import background from '../assets/background.svg';
---

<div id='container'>
  <img id='background' src={background.src} alt='' fetchpriority='high' />
  <main>
    <section id='hero'>
      <img
        class='logo'
        src={logo.src}
        width='179'
        height='222'
        alt='Jason Yang'
      />
      <h1>Jason Yang | Software Engineer | 10+ Years of Experience</h1>
      <h2>JavaScript/TypeScript, NodeJS, React 19, NextJS</h2>
      <h3>ðŸš§Hi, I'm currently being updated. Please check back soon!ðŸ”¨</h3>
      <section id='links'>
        <a class='button' href='https://www.linkedin.com/in/jasonyangcis/'
          >LinkedIn</a
        >
        <a class='button' href='https://github.com/jasonyangcis'>GitHub</a>
      </section>
    </section>
  </main>
</div>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #container {
    font-family:
      Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial,
      sans-serif;
    height: 100%;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
  }

  .logo {
    margin-bottom: 16px;
  }

  #hero {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
    text-align: center;
  }

  h1 {
    font-size: 22px;
    margin-top: 0.25em;
  }

  #links {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: center;
    border-top: 1px solid #666;
    margin-top: 12px;
    padding-top: 24px;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 10px 12px;
    color: #111827;
    text-decoration: none;
    transition: color 0.2s;
  }

  #links a:hover {
    color: rgb(78, 80, 86);
  }

  #links a svg {
    height: 1em;
    margin-left: 8px;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 10px;
  }

  #links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
  }

  #links p {
    width: 100%;
    text-align: center;
  }

  pre {
    font-family:
      ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas,
      'DejaVu Sans Mono', monospace;
    font-weight: normal;
    background: linear-gradient(14deg, #d83333 0%, #f041ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
  }

  h2 {
    margin: 0 0 2em;
    font-weight: normal;
    color: #111827;
    font-size: 20px;
  }
  h3 {
    margin: 0 0 2em;
    font-weight: normal;
    color: #111827;
    font-size: 18px;
  }

  p {
    color: #4b5563;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
  }

  code {
    display: inline-block;
    background:
      linear-gradient(66.77deg, #f3cddd 0%, #f5cee7 100%) padding-box,
      linear-gradient(155deg, #d83333 0%, #f041ff 18%, #f5cee7 45%) border-box;
    border-radius: 8px;
    border: 1px solid transparent;
    padding: 6px 8px;
  }

  .box {
    padding: 16px;
    background: rgba(255, 255, 255, 1);
    border-radius: 16px;
    border: 1px solid white;
  }

  @media screen and (max-width: 768px) {
    #container {
      display: flex;
      flex-direction: column;
    }
    #links {
      flex-wrap: wrap;
    }

    #links a.button {
      padding: 14px 18px;
    }

    h1 {
      line-height: 1.5;
    }
  }
</style>
